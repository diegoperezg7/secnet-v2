# SMB File Access - Severidad 2 (Media)
alert tcp any any -> $HOME_NET 445 (msg:"ET SMB SMB File Access Attempt"; flow:to_server,established; content:"\x00\x00\x00\x00"; depth:4; offset:8; classtype:attempted-admin; sid:1000041; rev:1; priority:2;)

# SMB Directory Listing - Severidad 2 (Media)
alert tcp any any -> $HOME_NET 445 (msg:"ET SMB SMB Directory Listing Attempt"; flow:to_server,established; content:"\x00\x00\x00\x00"; depth:4; offset:12; classtype:attempted-admin; sid:1000042; rev:1; priority:2;)

# Posible escaneo SYN - Severidad 2 (Media)
alert tcp any any -> $HOME_NET any (msg:"[SECNET] Posible escaneo SYN"; flags:S; threshold: type both, track by_src, count 10, seconds 10; sid:1001001; rev:1; priority:2;)
